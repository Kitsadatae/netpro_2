    private void GetPageActionPerformed(java.awt.event.ActionEvent evt) {                                        
        //Thread.setText(Thread.getText());
        MyThread link1 = new MyThread(URL1.getText(), "Thread1");
        MyThread link2 = new MyThread(URL2.getText(), "Thread2");
        link1.start();
        link2.start();
    }
